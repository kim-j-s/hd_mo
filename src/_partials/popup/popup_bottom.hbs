{{!-- 
	popup-id : id 배정
--}}
<div class="popup_wrap bottom{{#if popup-class}} {{popup-class}}{{/if}}{{#if close_exp}} close_exp{{/if}}{{#if popup-active}} active{{/if}}"{{#if popup-id}} id="{{popup-id}}"{{/if}}{{#if close-btn}}{{/if}} role="dialog" aria-modal="true" {{#if popup-active}}aria-hidden="false"{{else}}aria-hidden="true"{{/if}}>
	<div class="popup_container">
		{{#unless close_exp}}<div class="popup_dim" aria-hidden="true"{{#if popup-id}} onclick="closeHDPopup('{{popup-id}}');"{{/if}}></div>{{/unless}}
		<div class="popup_inner{{#if in-class}} {{in-class}}{{/if}}">
			{{!-- <div class="draggable" aria-grabbed="false" aria-dropeffect="close" tabindex="0" aria-label="드래그 하여 닫기"> --}}
			{{#unless no-drag}}	
			<div class="draggable" aria-hidden="true">
				<div class="move"></div>
			</div>
			{{/unless}}
			{{#unless no-header-clear}}
			<div class="popup_head">
				{{#unless no-header}}
				<div class="popup_head_title">{{{popup-title}}}</div>
				{{/unless}}
			</div>
			{{/unless}}
			
			{{> @partial-block}}
			{{#unless close-btn}}
				<button type="button" class="popup_close"{{#if popup-id}} onclick="closeHDPopup('{{popup-id}}');"{{/if}}><span class="blind">팝업 닫기</span></button>
			{{/unless}}
		</div>
	</div>
</div>