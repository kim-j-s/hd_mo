{{!-- 
	popup-id : id 배정
--}}
<div class="popup_wrap full{{#if popup-class}} {{popup-class}}{{/if}}{{#if active}} active{{/if}}"{{#if popup-id}} id="{{popup-id}}"{{/if}}{{#if close-btn}}{{/if}} role="dialog" {{#if active}}aria-hidden="false"{{else}}aria-hidden="true"{{/if}}>
	<div class="popup_container">
		<div class="popup_dim" aria-hidden="true"></div>
		<div class="popup_inner{{#if in-class}} {{in-class}}{{/if}}">
			<div class="popup_head">
				{{{popup-title}}}
			</div>
			{{> @partial-block}}
			{{#unless close-btn}}
				<button type="button" class="popup_close"><span class="blind">팝업 닫기</span></button>
			{{/unless}}
		</div>
	</div>
</div>