<div class="input_text">
  <div class="inp">
    <input type="text"
      {{#if id}}id="{{id}}"{{/if}}
      {{#if value}}value="{{value}}"{{/if}}
      {{#if placeholder}}placeholder="{{placeholder}}"{{/if}}
      {{#if disabled}}disabled{{/if}}
      {{#if readonly}}readonly{{/if}}
    >
    {{!-- 초기화 버튼 --}}
    {{#unless no_del}}<button type="button" class="del"><span class="blind">텍스트 삭제</span></button>{{/unless}}
    {{!-- 달력 호출 버튼 --}}
    {{#if no_cal}}<button type="button" class="cal"><span class="blind">달력 호출</span></button>{{/if}}
  </div>
  {{!-- validation --}}
  {{!-- 안내문구 노출 위치 --}}
  {{#if msg1}}
    <p class="msg_success">{{msg1}}</p>
  {{/if}}
  {{#if msg2}}
    <p class="msg_error">{{msg2}}</p>
  {{/if}}
  {{#if msg3}}
    <p class="msg_fail">{{msg3}}</p>
  {{/if}}
  {{!-- validation --}}
</div>